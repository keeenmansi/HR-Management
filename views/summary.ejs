<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HR Management Summary</title>
    <style>
        /* Add your styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 800px;
            margin: auto;
            background: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        .summary-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #ccc;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>HR Management Summary</h1>
        <div class="summary-item">
            <span>Total Employees:</span>
            <span><%= totalEmployees %></span>
        </div>
        <div class="summary-item">
            <span>New Employees This Month:</span>
            <ul>
                <% newEmployees.forEach(item => { %>
                    <li>Month <%= item.month %>: <%= item.count %></li>
                <% }); %>
            </ul>
        </div>
        <div class="summary-item">
            <span>Total Resignees:</span>
            <span><%= totalResignees %></span>
        </div>
        <div class="summary-item">
            <span>Monthly Resignations:</span>
            <ul>
                <% monthlyResignations.forEach(item => { %>
                    <li>Month <%= item.month %>: <%= item.count %></li>
                <% }); %>
            </ul>
        </div>
    </div>
</body>
</html>

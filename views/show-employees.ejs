<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Show Employees</title>
    <style>
        /* Basic styling for table and search bar */
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid #ccc;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        form.search-form {
            text-align: center;
            margin-bottom: 20px;
        }
        input[type="text"] {
            padding: 8px;
            width: 300px;
            box-sizing: border-box;
        }
        button {
            padding: 8px 20px;
            cursor: pointer;
        }
        button.edit-btn {
            background-color: #007bff;
            color: white;
            border: none;
        }
        button.edit-btn:hover {
            background-color: #0056b3;
        }
        button.delete-btn {
            background-color: #dc3545;
            color: white;
            border: none;
        }
        button.delete-btn:hover {
            background-color: #c82333;
        }
        .back-container {
            text-align: center;
            margin-top: 20px;
        }
        .back-button {
            padding: 10px 20px;
            background-color: #cc3333; /* Darker red color */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .back-button:hover {
            background-color: #b32424; /* Darker shade of red on hover */
        }
    </style>
</head>
<body>
    <h1>Show Employees</h1>

    <!-- Search Form -->
    <form class="search-form" action="/search-employees" method="get">
        <input type="text" placeholder="Search by name or department..." name="search">
        <button type="submit">Search</button>
    </form>

    <!-- Table of Employees -->
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Joining Date</th>
                <th>Department</th>
                <th>Qualification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% employees.forEach(employee => { %>
                <tr>
                    <td><%= employee.name %></td>
                    <td><%= employee.email %></td>
                    <td><%= employee.phone %></td>
                    <td><%= employee.joining_date %></td>
                    <td><%= employee.department %></td>
                    <td><%= employee.qualification %></td>
                    <td>
                        <form action="/edit-employee/<%= employee.id %>" method="get" style="display:inline;">
                            <button type="submit" class="edit-btn">Edit</button>
                        </form>
                        <form action="/delete-employee/<%= employee.id %>" method="post" style="display:inline;">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Back Button -->
    <div class="back-container">
        <button class="back-button" onclick="history.back();">Back</button>
    </div>
</body>
</html>
